#!/bin/bash

# editors config symlink
[[ "$(uname -s)" != "Darwin" ]] && exit 0

ROOT="$HOME"
DOTFILES_ROOT="$ROOT/.dotfiles"

sublimeText() {
    printf "  Would like link Sublime Text preferences? [y/n] "
    read -r -e answer

    if [ "$answer" = "y" ]; then
        cd $ROOT/Library/Application\ Support/Sublime\ Text\ 3/Packages/ || return
        mv User User.bkp
        ln -s $DOTFILES_ROOT/sublime-text/User
    fi
}

vscode() {
    printf "  Would like link VS Code settings? [y/n] "
    read -r -e answer

    if [ "$answer" = "y" ]; then
        cd "$ROOT/Library/Application Support/Code/User/" || return
        mv settings.json settings.json.bkp
        ln -s "$DOTFILES_ROOT/vscode/settings.json" settings.json
    fi
}

sublimeText
vscode
