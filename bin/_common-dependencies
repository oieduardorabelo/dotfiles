#!/bin/bash
#
# Homebrew
#
# This installs some of the common dependencies needed (or at least desired)
# using Homebrew.
[[ "$(uname -s)" != "Darwin" ]] && exit 0

fail() {
  printf "\\r\\033[2K  [\\033[0;31mFAIL\\033[0m] %s\\n" "$1"
  echo ''
}

uninstallHomebrew() {
  # Uninstall Homebrew
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/uninstall)"
}

installHomebrew() {
  # Install Homebrew
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
}

# Check for Homebrew
if test ! "$(command -v brew)"; then
  printf "  Would like to install Homebrew? [y/n] "
  read -r -e answer

  if [ "$answer" = "y" ]; then
    echo "  Installing Homebrew for you..."
    installHomebrew
  fi
else
  if test "$(command -v brew)"; then
    printf "  Would like to re-install Homebrew? [y/n] "
    read -r -e answer

    if [ "$answer" = "y" ]; then
      uninstallHomebrew
      installHomebrew
    fi
  fi
fi

if test "$(command -v brew)"; then
  printf "  Would like to update, upgrade and cleanup Homebrew? [y/n] "
  read -r -e answer

  if [ "$answer" = "y" ]; then
    printf "  \\nRunning 'brew update'...\\n\\n"
    brew update
    printf "  \\nRunning 'brew upgrade'...\\n\\n"
    brew upgrade
    printf "  \\nRunning 'brew cleanup'...\\n\\n"
    brew cleanup
  fi
fi

# common dependencies
if test "$(command -v brew)"; then
  echo -e "
    Common ''brew'' dependencies:

    bat, ffmpeg, gifsicle, git, grc, bash-completion, m-cli, nvm,
    coreutils, diff-so-fancy, bash-git-prompt, yarn (without-node)
  "
  printf "  Would like to install common dependencies? [y/n] "
  read -r -e answer

  if [ "$answer" = "y" ]; then
    brew install bat \
      ffmpeg \
      gifsicle \
      git \
      grc \
      bash-completion \
      m-cli \
      nvm \
      coreutils \
      diff-so-fancy \
      bash-git-prompt|| true
    brew install yarn --ignore-dependencies || true
  fi

  echo -e "
    Common ''brew/cask'' dependencies:

    From: https://github.com/sindresorhus/quick-look-plugins
     - qlcolorcode qlstephen qlmarkdown quicklook-json qlimagesize
       webpquicklook suspicious-package quicklookase qlvideo

    Custom:
     - font-fira-code itsycal the-unarchiver vlc alfred
       sizeup 1password dash cleanmymac sublime-text visual-studio-code
  "
  printf "  Would like to install common dependencies? [y/n] "
  read -r -e answerCask

  if [ "$answerCask" = "y" ]; then
     echo "Installing 'sindresorhus/quick-look-plugins' list..."
     brew cask install qlcolorcode qlstephen qlmarkdown quicklook-json qlimagesize \
       webpquicklook suspicious-package quicklookase qlvideo

    echo "Installing custom list..."
    brew cask install caskroom/fonts/font-fira-code \
      font-fira-code itsycal the-unarchiver vlc alfred \
      sizeup 1password dash cleanmymac sublime-text visual-studio-code
  fi
fi
