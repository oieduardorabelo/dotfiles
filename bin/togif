#!/bin/bash
# Converts videos (screencasts, mostly) to gifs scaling to 800:-1.
# Depends on ffmpeg and gifsicle.
togif() {
  local movie="$1"
  rm -rf "$movie.gif"
  ffmpeg -i "$movie" -vf "scale=720:-1" -pix_fmt rgb24 -r 17 -f gif - | \
    gifsicle --optimize=3 --delay=3 > "$movie.gif"
}

togif "$*"
